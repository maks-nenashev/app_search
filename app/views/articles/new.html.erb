<br>
<h2>New Article</h2>

<%= form_for :article, url: articles_path, data: {turbo:false}  do |f| %>
   
   <!div class="container-fluid">
   <%#= select(:article,:local_id, options_from_collection_for_select(@locals, "id","title", @article.present? ? @article.local_id : nil), {})%>
    <%= select(:article,:local_id, Local.all.collect {|local| [local.title, local.id]})%>
   <!/div>
<%#= render 'shared/errors', object: @article %> <!Walidacija - papka shared/_errors>
<%# if @article && @article.errors.full_messages.any?%> <!Prowerka! Esli estj ochybka to nepropustit>
<%# end%>
<br>
<br>

 <label class="label">Заголовок</label>
<div class="col-sm-10">          <! Walidacija CSS ---required: true, minlength:2,>
    <%= f.text_field :title, placeholder: "Заголовок", required: true, minlength:2, class: "form-control"%>
</div>

<br>
 <label class="label">Текст</label>
<div class="col-sm-10">     <! Walidacija CSS ---required: true, minlength:2,>
    <%= f.text_area :text, placeholder: "Текст", required: true, minlength:2, class: "form-control"%>
</div>

<br>
<div class="col-sm-10">     
    <%= f.file_field :image, class: "btn btn-outline-primary btn-sm"%>
</div>
<br>
  
  <%= f.submit "Нове оголошення", class: "btn btn-primary"%>

<%end%>

<br>
<br>
<%= link_to "Показати всi оголошення!",articles_path, class:"button is-danger is-inverted" %>