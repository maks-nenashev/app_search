<!h2 class="mb-4"><!/h2>  <!# Wywod wsech zapisej!>
 
 
<!br>
<p>
<%= link_to "Нове Оголошення", new_sense_path, class: "button big gray bi bi-pencil-square" %>
</p>
 
 <div class="container-fluid">
 <form class="d-flex" role="search" class="margin-right">
 <%= search_form_for @q do |f| %>                                             
          <%= f.select :choice_id_eq, @choice.map { |t| [t.title, t.id] }, required: false %>                                                                
                                                                             <!all posts in dropdown>
           .<%= f.select :local_id_eq, @locals.map { |t| [t.title, t.id] }, :include_blank => "Вся Україна", required: false %>
          
   <%= f.submit "Шукати!", class:"button is-primary "%>
    <%#= f.submit "Шукати!", class:" btn btn-outline-success"%>
    <% end %>
    </form>
  </div>

<br>
<% @senses.each do |sense| %>
  <h4>
  <%= link_to sense.title, sense_path(sense) %>
  </h4>

  <p class="my-2">
  <% if sense.image.attached?%> <! if image nil>
  <%= link_to image_tag(sense.image, style: "width: 380px; height: auto", class: 'img-thumbnail thumb'), sense_path(sense)%>
  <% end %>
  </p>           
  
  <h4 class="my-2">
  <%= sense.text %>
  </h4>
        <section class="card-text">
           <! Podkluchenie time pod soobzheniem!>
  <time datetime="<%= sense.created_at.strftime("%Y-%m-%d %H:%M:%S")%>">
  <%= sense.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </time>  
           </section>            
   <!hr>
