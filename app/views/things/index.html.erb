     <%#= link_to  "Show article", article_path(article),class: "btn btn-primary btn-sm"%>  
     <%= link_to  "Редагувати", edit_thing_path(thing),class: "btn btn-secondary btn-sm"%> 
     <%= link_to 'Видалити', thing_path(thing), data: {'turbo-method': :delete,'turbo-confirm': 
     'Are you sure?'}, class:"btn btn-danger btn-sm"%>
   <hr>              
                    
<% end %>
